modules = ["nodejs-20", "web", "python-3.11", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MagicMirror Server"

[[workflows.workflow]]
name = "MagicMirror Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 35979
externalPort = 3002

[[ports]]
localPort = 36149
externalPort = 3003

[[ports]]
localPort = 38063
externalPort = 3000

[[ports]]
localPort = 39727
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["node", "server.js"]

